<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
    .talkBox {
      width: 100%;
      margin: 3px 0;
      padding: 3px;
      height: 54px;
      border: 1px solid #BBBBBB;
    }
  </ui:style>
  <g:LayoutPanel styleName="hablar-Page" ui:field="page">
    <g:layer top='0px' left='0px' right='0px' bottom='69px' >
      <g:ScrollPanel ui:field="scroll" height="100%" styleName="scroll">
        <g:FlowPanel styleName="list" ui:field="list" />
      </g:ScrollPanel>
    </g:layer>
    <g:layer left="0" right="0" bottom="0" height="0">
    <g:FlowPanel ui:field="controls" styleName="panel">
      <g:TextArea styleName="{style.talkBox}" ui:field="talkBox"></g:TextArea>
      <g:Button ui:field="send">Send</g:Button>
    </g:FlowPanel>
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>