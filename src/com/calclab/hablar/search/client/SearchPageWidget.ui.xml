<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">


    <ui:style type="com.calclab.hablar.search.client.SearchPageWidget.Styles">
        .panel {
            padding: 5px 1% 3px 1%;
        }

        .message {
            padding: 3px 1%;
        }

        .info {
            color: #BBBBBB;
        }

        .alert {
            color: #c00;
        }

        .success {
            colxor: #090;
        }

        .unfocus {
            color: #E0E0E0;
        }

        .focus {
            color: black;
        }
    </ui:style>

    <g:LayoutPanel ui:field="self" styleName="hablar-Page hablar-SearchPage">
        <g:layer left="0" top="0" width="100%" height="0">
            <g:FlowPanel ui:field="messagePanel">
                <g:Label ui:field="message" styleName=".panel {style.message}">
                </g:Label>
            </g:FlowPanel>
        </g:layer>
        <g:layer left="0" top="0" right="0" bottom="40px">
            <g:ScrollPanel ui:field="scroll" height="100%" styleName="scroll">
                <g:FlowPanel styleName="list" ui:field="results" />
            </g:ScrollPanel>
        </g:layer>
        <g:layer left="0" bottom="0" width="100%" height="33px">
            <g:FlowPanel styleName="panel {style.panel}">
                <g:TextBox ui:field="term" styleName="searchBox {style.unfocus}" />
                <g:Button ui:field="search">Search</g:Button>
            </g:FlowPanel>
        </g:layer>
    </g:LayoutPanel>



</ui:UiBinder>