<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:hablar="urn:import:com.calclab.hablar.basic.client.presence">

	<ui:style field="headerStyle"
		type="com.calclab.hablar.basic.client.ui.HablarWidget.HeaderStyle">
			.requestFocus {
				color: #c00;
				font-weight: bold;
				border-bottom: 1px solid #BBBBBB;
				border-top: 1px solid white;
			}
			
			.open {
				border-bottom: 1px solid #BBBBBB;
				border-top: 1px solid white;
			}
			
			.closed {
				color: gray;
				border-bottom: 1px solid #BBBBBB;
				border-top: 1px solid white;
			}
		</ui:style>

	<ui:style>
		.pages {
			background-color: white;
		}
		
		.status {
			color: gray;
			padding: 2px 5px;
			background-color: #e9e9e9;
		}
	</ui:style>

	<g:LayoutPanel ui:field="container" styleName="hablar-Hablar">
		<g:layer left="0" top="0" right="0" height="20">
			<hablar:PresenceWidget></hablar:PresenceWidget>
		</g:layer>
		<g:layer left="0" bottom="0" right="0" height="20">
			<g:Label ui:field="status" styleName="{style.status}">Hablar</g:Label>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 